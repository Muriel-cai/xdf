.help{
  display:flex;
  align-items:center;
  justify-content:space-between;
  padding:30rpx 3rpx;
}
.help_box{
  box-sizing:border-box;
  width:320rpx;
  padding:24rpx;
  text-align:center;
  border-radius:10rpx;
  box-shadow:0 0 10rpx 0 #bbb;
  background:#fff;
}
.help_img{
  width:44rpx;
  margin-right:20rpx;
  vertical-align:middle;
}