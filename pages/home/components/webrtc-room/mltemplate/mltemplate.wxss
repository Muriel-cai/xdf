.tml.videoview {
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  height: 100%;
}


.tml .pusher-box,
.tml .player-caster-box {
  position: relative;
  display: block;
  overflow: hidden;
  width: 100vw;
  /* height: calc(100vw * 9/16); */
  height:89vh;
  text-align: center;
  vertical-align: top;
  margin-bottom: 1vw;
}

.tml .player-caster-box .player-caster-item {
  width: 100%;
  height: 100%;
}


.tml live-pusher {
  width: 100%;
  height: 100%;
}

.tml .player-box {
  position:fixed;
  top:0;
  left:0;
  height:20vh;
  width:30vw;
  display: flex;
  justify-content: space-between;
  background-color:#fff;
}

.tml .player-box .player-item,
.tml .player-box .pusher-item {
  position: relative;
  overflow: hidden;
  flex: 1;
  height:20vh;
  /* height: calc(100vw/3 - 2vw/3); */
  text-align: center;
  vertical-align: top;
}

.tml .player-box .player-item:nth-of-type(2) {
  margin: 0 1vw;
}

.tml .poster {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.55;
}

.tml .set {
  position: absolute;
  width: 32px;
  height: 56px;
  top: 50%;
  left: 50%;
  margin: -28px 0 0 -16px;
}

.tml live-player {
  width: 100%;
  height: 100%;
}

.tml .character {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}

.tml .loading {
  position: absolute;
  width: 100%;
  height: 100%;
}

.tml .loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}

.tml .player-sound {
  position: absolute;
  width: 8vw;
  height: 8vw;
  right: 0;
  bottom: 0;
}

.tml .player-camera {
  position: absolute;
  width: 8vw;
  height: 8vw;
  right: 0;
  bottom: 12vw;
}

.tml .dis-camera-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #000;
}

.tml .dis-camera-bg cover-image{
  position: absolute;
  width: 50%;
  height: calc(var(--width));
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
}